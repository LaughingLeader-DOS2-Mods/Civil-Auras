EVENT ForceUpdateOn
ON
	OnCharacterEvent(__Me, "CA_Event_ForceUpdate_On")
ACTIONS
	CharacterForceUpdate(1)
	Set(%ForcingUpdate, 1)
	DebugText(__Me, "Forcing updates for TK Hand")
	//DisplayCombatInfoText(__Me, "Forcing Updates", 2)
	
EVENT ForceUpdateOff
ON
	OnCharacterEvent(__Me, "CA_Event_ForceUpdate_Off")
ACTIONS
	CharacterForceUpdate(0)
	Set(%ForcingUpdate, 0)
	DebugText(__Me, "Forced updates disabled for TK Hand")
	//DisplayCombatInfoText(__Me, "Disabled Forced Updates", 2)