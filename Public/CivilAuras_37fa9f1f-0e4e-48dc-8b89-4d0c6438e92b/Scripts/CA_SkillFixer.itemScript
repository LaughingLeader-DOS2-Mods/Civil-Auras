INIT
	ITEM:__Me

EVENTS

EVENT OnUse
VARS
	CHARACTER:_Player
ON
	OnUseItem(_Player, __Me)
ACTIONS
IF "c1"
	CharacterIsPlayer(_Player)
THEN
	IF "c1"
		CharacterHasSkill(_Player, Target_CA_TeleHand)
	THEN
		CharacterRemoveSkill(_Player, Target_CA_TeleHand)
		CharacterAddSkill(_Player, Target_CA_TeleHand)
		StatusText(_Player, "Refreshed TeleHand")
	ENDIF
	
ENDIF